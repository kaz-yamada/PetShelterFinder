<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_marginBottom="@dimen/default_margin"
            android:background="@color/colorPlaceholderBackground" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/placeholder_body_text_height"
            android:background="@color/colorPlaceholderBackground" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/arrow_drawable_size"
        android:layout_height="@dimen/arrow_drawable_size"
        android:background="@color/colorPlaceholderBackground" />
</LinearLayout>